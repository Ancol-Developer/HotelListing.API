{
  "ConnectionStrings": {
    "HotelListingDbConnectionString": "Sever=(localdb)\\mssqllocaldb;Database=HotelListingAPIDb;Trust_Connection=true;MultipleActiveResultSets=True"
  },
  "SeriLog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./logs/log-.txt",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Seq",
        "Args": { "serverlUrl": "http://localhost:5341" }
      }
    ]
  },
  "AllowedHosts": "*"
}
